{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<header class="bg-white shadow-md py-4">
  <div class="container mx-auto flex justify-between items-center">
    <a href="#" class="text-2xl font-bold text-gray-800">Mon site</a>
    <nav>
      <ul class="flex space-x-4">
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Accueil</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">À propos</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Services</a></li>
        <li><a href="#" class="text-gray-600 hover:text-gray-800">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<main class="px-4 py-8">
  <section class="bg-white rounded-md shadow-md p-6 mb-8">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-4 md:mb-0">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Bienvenue sur mon site</h1>
        <p class="text-gray-600 mb-8">Découvrez nos produits et services de qualité.</p>
        <a href="#" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 inline-block">En savoir plus</a>
      </div>
      <div class="md:w-1/2">
        <img src="{{ asset('images/hero-image.jpg') }}" alt="Image de présentation" class="rounded-md shadow-md w-full">
      </div>
    </div>
  </section>

  <section class="bg-white rounded-md shadow-md p-6 mb-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-8">Nos services</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white rounded-md shadow-md p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Service 1</h3>
        <p class="text-gray-600 mb-4">Description du service 1.</p>
        <a href="#" class="text-blue-500 hover:text-blue-600">En savoir plus</a>
      </div>
      <div class="bg-white rounded-md shadow-md p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Service 2</h3>
        <p class="text-gray-600 mb-4">Description du service 2.</p>
        <a href="#" class="text-blue-500 hover:text-blue-600">En savoir plus</a>
      </div>
      <div class="bg-white rounded-md shadow-md p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Service 3</h3>
        <p class="text-gray-600 mb-4">Description du service 3.</p>
        <a href="#" class="text-blue-500 hover:text-blue-600">En savoir plus</a>
      </div>
    </div>
  </section>
</main>
{% endblock %}