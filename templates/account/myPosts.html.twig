{% extends "base.html.twig" %}

{% block title %}Kigo - Mes projets
{% endblock %}

{% block header %}
	{% include "_parts/_header.html.twig" %}
{% endblock %}

{% block body %}
	<div class="container mx-auto my-20">
		<h1 class="text-center text-8xl pb-10">Mes projets</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{% for userId in userId %}
				<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
					<a class="text-decoration-none text-dark" href="{{ path('detail', {'id': userId.id}) }}">
						{% if userId.imagePath %}
							{% set image = userId.image.first %}
							<img class="rounded-t-lg w-full h-48 object-cover" src="/images/upload/{{ userId.imagePath }}" alt="Card image cap">
						{% else %}
							<h4 class="text-4xl font-bold">ðŸš« Pas d'image</h4>
						{% endif %}
						<div class="p-5">
							<h5 class="mb-2 text-4xl font-bold tracking-tight text-gray-900 dark:text-white">{{ userId.title }}</h5>
							<p class="mb-3 text-2xl font-normal text-gray-700 dark:text-gray-400">{{ userId.typeId.label }}</p>
							<div class="flex gap-2">
								<a href="{{ path('editPost', {'id': userId.id}) }}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gray-400 rounded-lg hover:bg-blue-800">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-14 h-14">
										<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
									</svg>
									<p class="text-2xl">Ã‰diter ce projet</p>
								</a>
								<div class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800">
									{{ include('posts/_delete_form.html.twig') }}
									<p class="text-2xl">Supprimer ce projet</p>
								</div>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
	{% include "_parts/_navbar.html.twig" %}
{% endblock %}
