{% extends 'base.html.twig' %}

{% block title %}Ads index{% endblock %}

{% block body %}
    <h1>Ads index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>
                    <a href="{{ path('detail', {'id': post.id}) }}">show</a>
                    <a href="{{ path('editPost', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('addPost', {"id" : app.user.id}) }}">Create new</a>
{% endblock %}
