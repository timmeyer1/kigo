{% extends 'base.html.twig' %}

{% block title %}Kigo - Inscription{% endblock %}

{% block body %}
    <div class="flex flex-col items-center h-screen pt-44">
        <img src="{{ asset('images/logo.png') }}" alt="Logo Kigo" class="w-96 pb-14">
        <div class="bg-logo rounded-lg shadow-lg p-8 w-[90%]">
            <h1 class="text-8xl font-bold justify-center flex py-14">Inscription</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'flex flex-col items-center'}}) }}
            <div class="text-start mb-6 w-full">
                <div class="mb-4">
                    {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.firstname, {'attr': {'class': 'bg-white border-gray-600 rounded-lg w-full px-8 py-6 text-3xl placeholder:text-gray-400', 'placeholder': 'Entrez votre prénom'}}) }}
                    {{ form_errors(registrationForm.firstname) }}
                </div>
                <div class="mb-4">
                    {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.lastname, {'attr': {'class': 'bg-white border-gray-600 rounded-lg w-full px-8 py-6 text-3xl placeholder:text-gray-400', 'placeholder': 'Entrez votre nom'}}) }}
                    {{ form_errors(registrationForm.lastname) }}
                </div>
                <div class="mb-4">
                    {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-white border-gray-600 rounded-lg w-full px-8 py-6 text-3xl placeholder:text-gray-400', 'placeholder': 'Entrez votre adresse e-mail'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-white border-gray-600 rounded-lg w-full px-8 py-6 text-3xl placeholder:text-gray-400', 'placeholder': 'Entrez votre mot de passe'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                <div class="mb-4">
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2 w-10 h-10'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                <div class="mb-4">
                    {{ form_label(registrationForm.section, 'Je suis en...', {'label_attr': {'class': 'text-6xl p-4'}}) }}
                    {{ form_widget(registrationForm.section, {'attr': {'class': 'text-2xl'}}) }}
                    {{ form_errors(registrationForm.section) }}
                </div>
            </div>
            <button class="bg-green-500 hover:bg-green-600 text-white font-bold w-60 h-20 rounded text-3xl" type="submit">Je m'inscris !</button>
            {{ form_end(registrationForm) }}
            <p class="flex justify-center items-center text-xl mt-10">Vous avez déjà un compte<a href={{path('app_login')}}>? Connectez-vous ici.</a></p>
        </div>
    </div>
{% endblock %}